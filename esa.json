{
    "$schema": "https://unpkg.com/@anthropic-ai/esa@latest/schema.json",
    "name": "myesa-blog",
    "version": "1.0.0",
    "build": {
        "rootDirectory": "frontend",
        "command": "npm install && npm run build",
        "outputDirectory": "dist"
    },
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                }
            ]
        }
    ]
}